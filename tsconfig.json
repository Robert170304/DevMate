{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@devmate/*": ["./src/*"],
      "@devmate/store/*": ["src/store/*"],
      "@devmate/components/*": ["src/components/*"],
      "@devmate/app/*": ["src/app/*"],
      "@devmate/lib/*": ["src/lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "node_modules",
    ".next/types/**/*.ts",
    "src/**/*.style.*"
  ],
  "exclude": ["node_modules"]
}
